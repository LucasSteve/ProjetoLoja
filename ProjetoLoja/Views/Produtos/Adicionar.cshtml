@model ProjetoLoja.Models.ViewModels.ProdutoFormViewModel;

@{
    ViewData ["Title"] = "Adicionar";
}

<h2>@ViewData["Title"]</h2>

<h4>Produto</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Adicionar">
            <div class="form-group">
                <label asp-for="Produto.Nome" class="control-label"></label>
                <input asp-for="Produto.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Quantidade" class="control-label"></label>
                <input asp-for="Produto.Quantidade" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.ValorPago" class="control-label"></label>
                <input asp-for="Produto.ValorPago" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.DataCompra" class="control-label"></label>
                <input asp-for="Produto.DataCompra" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.CategoriaId" class="control-label"></label> 
                <select asp-for="Produto.CategoriaId" asp-items="@(new SelectList(Model.Categorias,"Id","Nome"))" class= "form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>