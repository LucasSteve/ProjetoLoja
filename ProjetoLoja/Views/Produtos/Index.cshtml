@model IEnumerable<ProjetoLoja.Models.Produto>


@{ 
    ViewData["Title"] = "Produtos";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Adicionar" class="btn btn-dark">Adicionar produto</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="shadow">
            <th>
                @Html.DisplayNameFor(model => model.Nome);
            </th>          
            <th>
                @Html.DisplayNameFor(model => model.ValorPago);
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade);
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCompra);
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Nome)
            </td>          
            <td>
                @Html.DisplayFor(modelitem => item.ValorPago)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.DataCompra)
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                <a asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a>
                <a asp-action="Excluir" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
            }
    </tbody>
</table>

